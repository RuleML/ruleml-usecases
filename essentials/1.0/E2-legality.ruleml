               <Expr> 
                  <Fun>date</Fun> 
                  <Var>y1</Var> 
                  <Var>m1</Var> 
                  <Var>d1</Var> 
               </Expr> 
            </Atom> 
            <Atom> 
               <Rel>greaterThan</Rel> 
               <Var>delta</Var> 
