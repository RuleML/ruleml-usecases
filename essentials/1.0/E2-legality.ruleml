         </And> 
         <Neg> 
            <Atom> 
               <Rel>discount</Rel> 
               <Var>customer</Var> 
               <Var>product1</Var> 
               <Var>percent</Var> 
            </Atom> 
         </Neg> 
      </Implies> 
      <Implies> 
         <And> 
            <Atom> 
               <Rel>delivery</Rel> 
               <Var>customer</Var> 
               <Var>product2</Var> 
               <Var>amount</Var> 
               <Expr> 
                  <Fun>date</Fun> 
